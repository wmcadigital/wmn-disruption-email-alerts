{% set pageName = 'signup' %}
{% extends "layout.njk" %}

{% block title -%}
  Disruption Alerts - Add services
{%- endblock %}

{% block content %}
<div class="wmnds-container-alerts-sign-up">
    <h1>Sign up to email alerts about disruptions</h1>
    <div class="wmnds-grid">
        <div class="wmnds-col-1 wmnds-col-sm-3-4">
            <div class="wmnds-content-tile">
                <h2>Add a bus route</h2>
                <label class="wmnds-fe-label" for="serviceSearch">Service Search</label>
                <div
                    class="wmnds-autocomplete wmnds-grid">
                    <!-- Search icon -->
                    <svg class="wmnds-autocomplete__icon">
                        <use xlink:href="$*cdn/img/wmnds-sprite.min.svg#wmnds-general-search" href="$*cdn/img/wmnds-sprite.min.svg#wmnds-general-search"></use>
                    </svg>
                    <!-- normal sized loader -->
                    <div class="wmnds-loader" role="alert" aria-live="assertive">
                        <p class="wmnds-loader__content">Content is loading...</p>
                    </div>
                    <!-- Autocomplete input box -->
                    <input id="autoComplete" class="wmnds-fe-input wmnds-autocomplete__input wmnds-col-1" value="" placeholder="Search for a bus service" name="searchExample" aria-label="Search for a bus service" type="text"></div>

                    <!-- Autocomplete suggestions -->
                    <div id="autolist"></div>
                    <a class="wmnds-btn wmnds-btn--destructive wmnds-col-1 wmnds-col-sm-auto" href="$*cdn/index.html">
                        Cancel
                    </a>
                    <a class="wmnds-btn wmnds-btn--cta wmnds-col-1 wmnds-col-sm-auto" href="$*cdn/alerts/summary.html">
                        Continue
                    </a>
                </div>
            </div>
        </div>
    </div>
{% endblock %}
