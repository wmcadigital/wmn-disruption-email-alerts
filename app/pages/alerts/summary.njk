{% set pageName = 'signup' %}
{% extends "layout.njk" %}

{% block title -%}
Disruption Alerts - Summary{%- endblock %}{% block content %}
<div class="wmnds-container-alerts-sign-up">
    <h1>Sign up to email alerts about disruptions</h1>
    <div class="wmnds-grid">
        <div class="wmnds-col-1 wmnds-col-sm-3-4">
            <div class="wmnds-content-tile">
                <div class="wmnds-content-tile__copy wmnds-p-t-xsm">
                    <div class="wmnds-grid">
                        <div class="wmnds-col-3-4">
                            <h2>Personal details</h2>
                        </div>
                        <div class="wmnds-col-1-4">
                            <a class="wmnds-float-left" href="$*cdn/alerts/personal-details.html">Change</a>
                        </div>
                    </div>
                    <p>Full name<br>
                            <strong>Nathan Rogan</strong>
                        </p>
                        <p>Email address<br>
                                <strong>nathan@test.com</strong>
                            </p>
                            <hr>
                                <div class="wmnds-grid">
                                    <div class="wmnds-col-3-4">
                                        <h2>Services added</h2>
                                        <p>You can sign up to as many bus services as you like.
                                          You will receive an automatic email update for each disruption.</p>
                                    </div>
                                    <div class="wmnds-col-1-4">
                                        <a class="wmnds-float-left" href="$*cdn/alerts/services.html">Change</a>
                                    </div>
                                </div>
                                <div class="wmnds-grid">
                                    <div class="wmnds-col-22-24 wmnds-col-sm-3-4">
                                        <ul class="wmnds-content-tile__list">
                                            <li class="wmnds-content-tile__list--li">
                                                <div class="wmnds-grid wmnds-grid--justify-center">
                                                    <div class="wmnds-content-tile__list-content wmnds-col-1 wmnds-col-sm-1-2">
                                                        <div class="wmnds-col-auto">
                                                            <div class="wmnds-disruption-indicator-medium wmnds-disruption-indicator-medium">47</div>
                                                        </div>
                                                        <p class="wmnds-disruption-indicator-large__text">
                                                            <strong>Longbridge - Birmingham</strong>
                                                            <br>including return journey</p>
                                                        </div>
                                                        <div class="wmnds-col-auto wmnds-col-1 wmnds-col-sm-1-2">
                                                            <button class="wmnds-btn wmnds-btn--destructive wmnds-col-1 wmnds-col-sm-auto">Remove route
                                                                <svg class="wmnds-btn__icon wmnds-btn__icon--right">
                                                                    <use xlink:href="$*cdn/img/wmnds-sprite.min.svg#wmnds-general-trash" href="$*cdn/img/wmnds-sprite.min.svg#wmnds-general-trash"></use>
                                                                </svg>
                                                            </button>
                                                        </div>
                                                    </div>
                                                </li>
                                                <hr>
                                                    <li class="wmnds-content-tile__list--li">
                                                        <div class="wmnds-grid">
                                                            <div class="wmnds-content-tile__list-content wmnds-col-1 wmnds-col-sm-1-2">
                                                                <div class="wmnds-col-auto">
                                                                    <div class="wmnds-disruption-indicator-medium wmnds-disruption-indicator-medium">40</div>
                                                                </div>
                                                                <p class="wmnds-disruption-indicator-large__text">
                                                                    <strong>West Bromwich - Wednesbury</strong>
                                                                    <br>including return journey</p>
                                                                </div>
                                                                <div class="wmnds-col-auto wmnds-col-1 wmnds-col-sm-1-2">
                                                                    <button class="wmnds-btn wmnds-btn--destructive wmnds-col-1 wmnds-col-sm-auto">Remove route
                                                                        <svg class="wmnds-btn__icon wmnds-btn__icon--right">
                                                                            <use xlink:href="$*cdn/img/wmnds-sprite.min.svg#wmnds-general-trash" href="$*cdn/img/wmnds-sprite.min.svg#wmnds-general-trash"></use>
                                                                        </svg>
                                                                    </button>
                                                                </div>
                                                            </div>
                                                        </li>
                                                        <hr>
                                                            <li class="wmnds-content-tile__list--li">
                                                                <div class="wmnds-grid">
                                                                    <div class="wmnds-content-tile__list-content wmnds-col-1 wmnds-col-sm-1-2">
                                                                        <div class="wmnds-col-auto">
                                                                            <div class="wmnds-disruption-indicator-medium wmnds-disruption-indicator-medium">x11</div>
                                                                        </div>
                                                                        <p class="wmnds-disruption-indicator-large__text">
                                                                            <strong>Burton on Trent - Perry Barr via Erdington</strong>
                                                                            <br>including return journey</p>
                                                                        </div>
                                                                        <div class="wmnds-col-auto wmnds-col-1 wmnds-col-sm-1-2">
                                                                            <button class="wmnds-btn wmnds-btn--destructive wmnds-col-1 wmnds-col-sm-auto">Remove route
                                                                                <svg class="wmnds-btn__icon wmnds-btn__icon--right">
                                                                                    <use xlink:href="$*cdn/img/wmnds-sprite.min.svg#wmnds-general-trash" href="$*cdn/img/wmnds-sprite.min.svg#wmnds-general-trash"></use>
                                                                                </svg>
                                                                            </button>
                                                                        </div>
                                                                    </div>
                                                                </li>
                                                                <hr>
                                                                    <li class="wmnds-content-tile__list--li">
                                                                        <div class="wmnds-grid">
                                                                            <div class="wmnds-col-auto wmnds-col-1">
                                                                                <button class="wmnds-btn wmnds-col-1 wmnds-col-sm-auto">Add more routes

                                                                                </button>
                                                                            </div>
                                                                        </div>
                                                                    </li>

                                                                </ul>
                                                            </div>
                                                        </div>
                                                        <hr>
                                                            <h2>Consent</h2>
                                                            <div class="wmnds-fe-group">
                                                                <fieldset class="wmnds-fe-fieldset">
                                                                    <div class="wmnds-fe-checkboxes">
                                                                        <label class="wmnds-fe-checkboxes__container">
                                                                            I have read the
                                                                            <a href="#" target="_blank" title="Read our Privacy Policy">Privacy Policy</a>
                                                                            and agree to be emailed about disruptions.
                                                                            <input class="wmnds-fe-checkboxes__input" value="Option 1" type="checkbox"/>
                                                                            <span class="wmnds-fe-checkboxes__checkmark">
                                                                                <svg class="wmnds-fe-checkboxes__icon">
                                                                                    <use xlink:href="$*cdn/img/wmnds-sprite.min.svg#wmnds-general-checkmark" href="$*cdn/img/wmnds-sprite.min.svg#wmnds-general-checkmark"></use>
                                                                                </svg>
                                                                            </span>
                                                                        </label>
                                                                        <label class="wmnds-fe-checkboxes__container">
                                                                            I agree to be emailed by West Midlands Combined Authority about any research opportunities.
                                                                            <input class="wmnds-fe-checkboxes__input" value="Option 2" type="checkbox"/>
                                                                            <span class="wmnds-fe-checkboxes__checkmark">
                                                                                <svg class="wmnds-fe-checkboxes__icon">
                                                                                    <use xlink:href="$*cdn/img/wmnds-sprite.min.svg#wmnds-general-checkmark" href="$*cdn/img/wmnds-sprite.min.svg#wmnds-general-checkmark"></use>
                                                                                </svg>
                                                                            </span>
                                                                        </label>
                                                                    </div>
                                                                </fieldset>
                                                            </div>
                                                            <a class="wmnds-btn wmnds-col-1 wmnds-m-t-md" href="$*cdn/alerts/successful.html">
                                                                Complete sign up
                                                            </a>
                                                        </div>
                                                    </div>
                                                </div>
                                            </div>
                                        </div>
                                    {% endblock %}

